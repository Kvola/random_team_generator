<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="email_template_inscription_validated" model="mail.template">
            <field name="name">Inscription validée</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Votre inscription a été validée</field>
            <field name="body_html">
                <div>
                    <p>Bonjour <t t-esc="object.name"/>,</p>
                    <p>Votre inscription a été validée par notre équipe.</p>
                    <p>Vous pouvez maintenant vous connecter à votre espace membre.</p>
                    <p>Cordialement,<br/>L'équipe</p>
                </div>
            </field>
        </record>
</odoo>